<?xml version="1.0" encoding="utf-8"?>

<config>
	<fieldset name="component" label="WimTv"
		description="COM_WIMTVPRO_CONFIG_CREDENTIAL">

		<field name="wimtv_username" type="text" default="username"
			label="COM_WIMTVPRO_CONFIG_USERNAME" description="" />
		<field name="wimtv_password" type="password" default="password"
			label="COM_WIMTVPRO_CONFIG_PASSWORD" description="" />
				
		<field name="wimtv_basepath" type="hidden" default="http://peer.wim.tv/wimtv-webapp/rest/"
		   label="wimtv_urlVideosDetailWimtv" description="Base path for wimtv api" />
		<field name="wimtv_urlVideosDetailWimtv" type="hidden" default="videos?details=true&#38;#38;incomplete=true" 
		   label="wimtv_urlVideosDetailWimtv" description="View videos wimtv" />
		<field name="wimtv_replaceUserWimtv" type="hidden" default="{username}" />
		<field name="wimtv_replaceContentWimtv" type="hidden" default="{contentIdentifier}" />
		<field name="wimtv_replaceshowtimeIdentifier" type="hidden" default="showtimeIdentifier" />
		<field name="wimtv_urlShowTimeDetailWimtv" type="hidden" default="users/{username}/showtime?details=true" />
		<field name="wimtv_urlShowTimeWimtv" type="hidden" default="users/{username}/showtime" />
		<field name="wimtv_urlThumbsWimtv" type="hidden" default="videos/{contentIdentifier}/thumbnail" />
	
		<field name="wimtv_heightPreview" type="hidden" default="280" />
	    <field name="wimtv_widthPreview" type="hidden" default="500" />
	    
	    <field name="wimtv_nameSkin" type="hidden" default="defaultWimtv" />
	    
	</fieldset>
	
	
	
</config>
